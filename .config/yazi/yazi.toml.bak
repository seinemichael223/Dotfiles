[mgr]
show_hidden = true
sort_by = "natural"

[opener]
play = [
    { run = 'mpv "$@"', orphan = true, for = "unix" },
]

edit = [
	{ run = 'nvim "$@"', block = true, for = "unix" },
	{ run = 'bat "$@"', block = true, for = "unix" },

]

open = [
	{ run = 'xdg-open "$@"', desc = "Open" },
	{ run = 'gwenview "$@"', desc = "Gwenview" },
]

pdff = [
    { run = 'zathura "$@"', desc = "zathura", orphan = true, for = "unix" },
]

doc = [
    { run = 'libreoffice "$@"', orphan = true, for = "unix" },
]


extract = [
	{ run = 'ouch d -y "$@"', desc = "Extract here with ouch", for = "unix" },
]



[open]
rules = [
    { name = "*/", use = [ "edit", "open" ] },
    { name = "*.json", use = [ "edit" ] },
    { name = "*.docx", use = [ "doc" ] },
    { name = "*.pptx", use = [ "doc" ] },
    { name = "*.txt", use = [ "edit" ] },
    { name = "*.py", use = [ "edit" ] },
    { name = "*.rs", use = [ "edit" ] },
    { name = "*.c", use = [ "edit" ] },
    { name = "*.cpp", use = [ "edit" ] },
    { name = "*.pdf", use = [ "pdff" ] },
    { mime = "text/*", use = [ "edit" ] },
    { mime = "application/pdf", use = [ "pdff" ] },
    { mime = "{audio,video}/*", use = [ "play" ] },
    { mime = "image/*", use = [ "open" ] },
    { mime = "application/{,g}zip", use = [ "extract" ] },
]

[confirm]
trash = false
delete = true

[plugin]
prepend_previewers = [
	# Archive previewer
	{ mime = "application/*zip",            run = "ouch" },
	{ mime = "application/x-tar",           run = "ouch" },
	{ mime = "application/x-bzip2",         run = "ouch" },
	{ mime = "application/x-7z-compressed", run = "ouch" },
	{ mime = "application/x-rar",           run = "ouch" },
	{ mime = "application/x-xz",            run = "ouch" },
]
